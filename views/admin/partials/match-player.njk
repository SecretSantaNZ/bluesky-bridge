{% macro matchPlayer(rowProp = 'match', side, description) %}
<div class="flex sm:justify-center items-center text-lg">
  <div class="italic sm:hidden mr-2">{{ description }}:</div>
  <div class="size-10 block shrink-0 rounded-full overflow-hidden">
    <template x-if="{{ rowProp }}.{{ side }}_avatar_url">
      <img
        x-bind:src="{{ rowProp }}.{{ side }}_avatar_url"
        alt=""
      />
    </template>
    <template x-if="!{{ rowProp }}.{{ side }}_avatar_url">
      <svg viewBox="0 0 24 24" fill="none" stroke="none" title="">
        <circle cx="12" cy="12" r="12" fill="#0070ff"></circle>
        <circle cx="12" cy="9.5" r="3.5" fill="#fff"></circle>
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          fill="#fff"
          d="M 12.058 22.784 C 9.422 22.784 7.007 21.836 5.137 20.262 C 5.667 17.988 8.534 16.25 11.99 16.25 C 15.494 16.25 18.391 18.036 18.864 20.357 C 17.01 21.874 14.64 22.784 12.058 22.784 Z"
        ></path>
      </svg>
    </template>
  </div>
  <div class="ml-2">
    <a
      x-bind:href="'https://bsky.app/profile/' + encodeURIComponent({{ rowProp }}.{{ side }}_handle)"
      target="_blank"
    >
      <span
        x-text="'@' + {{ rowProp }}.{{ side }}_handle"
      ></span>
      <span
        x-show="{{ rowProp }}.{{ side }}_deactivated"
        x-text="{{ rowProp }}.{{ side }}_booted ? 'Booted' : 'Opted-out'"
        class="font-semibold"
      ></span
    ></a>
  </div>
  <a x-target="modal-content" @ajax:before="$dispatch('modal:open')" x-bind:href="'/admin/player/' + {{ rowProp }}.{{ side }}_id + '/notes'">
    <template x-if="{{ rowProp }}.{{ side }}_note_count">
      <div class="i-mdi-comment-text-multiple size-6"></div>
    </template>
    <template x-if="!{{ rowProp }}.{{ side }}_note_count">
      <div class="i-mdi-comment-add-outline size-6"></div>
    </template>
  </a>
</div>
{% endmacro %}