{% extends "common/page-layout.njk" %}
{% from "common/card.njk" import card %}
{% from "common/form-fields.njk" import activitySpinner, inputSubmitWithActivity %}
{% block body %}
<div class="w-full flex justify-center">
  {% call card() %}
<div id="modal-content" x-init="informationalModal = true">
  <h1 class="mb-4">@{{ player_display_handle }}'s Badges</h1>
  {% for badge in playerBadges %}
    <div class="flex mb-4 py-2 items-center">
      <img src="{{ badge.image_url }}" class="block size-16 mr-4">
      <p class="font-semibold text-xl">{{ badge.title }}</p>
      <div class="grow"></div>
      <form x-target="modal-content" action="/admin/player/{{ player.id }}/badges/{{ badge.id }}/delete" method="post">
        {{ activitySpinner() }}
        <button type="submit">
          <div class="i-mdi-trash-can-outline size-12 htmx-request:hidden"></div>
        </button>
        <input type="hidden" name="csrfToken" value="{{ csrfToken }}"/>
      </form>
  </div>
  {% endfor %}
  {% if badges.length > 0 %}
    <form x-target="modal-content" action="/admin/player/{{ player.id }}/badges" method="post" class="flex mb-4">
      <select name="badge_id"
        class="p-2 rounded-lg border-slate-300 border bg-slate-50 dark:bg-slate-950 w-full outline-hidden disabled:opacity-50 mr-4"
      >
        {% for badge in badges %}
          <option value="{{ badge.id }}">{{ badge.title }}</option>
        {% endfor %}
      </select>
      <input type="hidden" name="csrfToken" value="{{ csrfToken }}"/>
      {{ activitySpinner() }}
      <button type="submit">
        <div class="i-mdi-add size-12 htmx-request:hidden"></div>
      </button>
    </form>
  {% endif %}
<div>
  {% endcall %}
</div>
{% endblock %}