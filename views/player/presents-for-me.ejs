<h1 class="text-xl font-semibold">Presents for me</h1>
<p class="mt-8">Once you're Santa has sent a present it will show up here. Don't worry, we'll also DM you</p>
<% myGifts.forEach(function(tracking) { %>
  <div class="mt-8 flex flex-col items-center">
    <p>Sent <%= formatDate(tracking.shipped_date) %> with <%= tracking.carrier %> <b><%= tracking.tracking_number %></b>. <%= tracking.giftwrap_status ? 'Gifts are wrapped.' : 'Gifts are naked (do not remove postal wrapper / box).' %></p>
    <form hx-post="/player/tracking/<%= tracking.id %>/<%= tracking.missing ? 'arrived' : 'missing' %>" class="mt-2">
      <%- include('../partials/activity-spinner.ejs') %>
      <button class="htmx-request:hidden flex items-center hover:text-sky-500 rounded-sm drop-shadow-lg focus:text-sky-500 focus:ring ring-sky-500 outline-none"><div class="<%= tracking.missing ? 'i-mdi-package-outline' : 'i-mdi-package-off-outline' %> mr-1 size-5"></div><div><%= tracking.missing ? 'Report arrived' : 'Report missing' %></div></button>
      <input type="hidden" name="csrfToken" value="<%= csrfToken %>"/>
    </form>
  </div>
<% }) %>