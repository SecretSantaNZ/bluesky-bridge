{% extends "common/page-layout.njk" %}
{% from "common/card.njk" import card %}
{% block body %}
<div class="w-full flex justify-center">
  {% call card() %}
  <div class="space-y-8" id="dialog-content">
    <h1>{{ badge.title }}</h1>
    <p>{{ badge.description }}</p>
    <div class="flex flex-col justify-center">
      <img
        class="block grow shrink object-contain drop-shadow-lg"
        src="{{ badge.image_url }}"
      />
    </div>
  </div>
  <div class="mt-8">
    <a href="/" class="text-gray-400 no-underline absolute bottom-8 left-8">Close</a>
  </div>
  {% endcall %}
{% endblock %}
